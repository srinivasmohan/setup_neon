FROM fedora:43

RUN dnf install -y --setopt=install_weak_deps=False \
    ca-certificates openssl-libs \
    && dnf clean all

RUN groupadd -r neon && useradd -r -g neon neon

COPY .docker-staging/storage_broker /usr/local/bin/storage_broker
RUN chmod +x /usr/local/bin/storage_broker

USER neon

EXPOSE 50051

ENTRYPOINT ["storage_broker"]
CMD ["--listen-addr", "0.0.0.0:50051"]
