FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

RUN groupadd -r neon && useradd -r -g neon neon

COPY .docker-staging/proxy /usr/local/bin/proxy
RUN chmod +x /usr/local/bin/proxy

USER neon

EXPOSE 4432 7000

ENTRYPOINT ["proxy"]
CMD ["--proxy", "0.0.0.0:4432", "--http", "0.0.0.0:7000"]
