FROM fedora:43

RUN dnf install -y --setopt=install_weak_deps=False \
    ca-certificates openssl-libs \
    && dnf clean all

RUN groupadd -r neon && useradd -r -g neon neon

COPY .docker-staging/proxy /usr/local/bin/proxy
RUN chmod +x /usr/local/bin/proxy

USER neon

EXPOSE 4432 7000

ENTRYPOINT ["proxy"]
CMD ["--proxy", "0.0.0.0:4432", "--http", "0.0.0.0:7000"]
